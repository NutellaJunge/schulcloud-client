<div class="form-group">
    {{#if label}}
        <label for={{id}}>{{label}}</label>
    {{/if}}
    <div class="{{class}}">
    <input
            class="form-control"
            data-datetime
            name={{id}}
            autocomplete="off"
            id={{id}}
            type="text"
            value="{{dateTimeToPicker value}}"
            {{#if dataFormat}}data-format="{{dataFormat}}"{{else}}data-format="{{$t "format.dateTimePicker"}}"{{/if}}
            {{#if dataMask}}data-mask="{{dataMask}}"{{else}}data-mask="{{$t "format.dateTimePickerMask"}}"{{/if}}
            {{#if dataMinDate}}data-min-date="{{dataMinDate}}"{{/if}}
            {{#if dataTestId}}data-testid="{{dataTestId}}"{{/if}}
    />
    {{#if currentTimezone}}
        <div class="input-group-addon">
            <span class="input-group-text">{{ currentTimezone }} {{#if currentTimezoneOffset}}(UTC{{currentTimezoneOffset}}){{/if}}</span>
        </div>
    {{/if}}
</div>
</div>
